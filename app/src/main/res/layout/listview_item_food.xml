<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="5dp">

    <ImageView
        android:id="@+id/food_icon"
        android:layout_width="80dp"
        android:layout_height="40dp"

        android:src="@drawable/kb"/>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:gravity="left" >

        <TextView
            android:id="@+id/food_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="food_name"
            android:textSize="40px" />

        <TextView
            android:id="@+id/food_sales"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="food_sales" />
        <TextView
            android:id="@+id/price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="price" />
        <TextView
            android:id="@+id/market_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="market_price" />

        <TextView
            android:id="@+id/note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="note" />


    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/food_item_nofood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:text="已售完"/>
            <Button
                android:id="@+id/reduce_food"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:visibility="invisible"
                android:background="@drawable/sp"/>
            <TextView
                android:id="@+id/food_num"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:visibility="invisible"
                android:text="1"/>
            <Button
                android:id="@+id/add_food"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/lv_btn_add_food"/>
        </LinearLayout>


    </LinearLayout>


</LinearLayout>