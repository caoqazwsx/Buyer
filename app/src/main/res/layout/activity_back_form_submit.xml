<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.zhao.buyer.activity.BackFormReasonSubmitActivity">

    <include layout="@layout/title_base"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <EditText
            android:id="@+id/back_form_reason_text"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:padding="20dp"
            android:gravity="top"
            android:background="@drawable/lb"
            android:layout_column="5"
            android:ems="10"
            android:hint="请输入退单理由"  />

    </LinearLayout>

    <Button
        android:id="@+id/back_form_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:textSize="20dp"
        android:background="@color/system"
        android:text="提 交"/>
</LinearLayout>
