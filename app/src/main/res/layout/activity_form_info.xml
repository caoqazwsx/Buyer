<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.zhao.buyer.activity.FormInfoActivity">
    <include layout="@layout/title_base"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp">
                <TextView
                    android:id="@+id/form_info_submit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订单已提交"
                    />
                <!--android:textStyle="bold"-->
                <!--android:textColor="@color/system"-->

                <TextView
                    android:id="@+id/form_info_waiPay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/form_info_accept"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商家已接单"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.1"/>
                <TextView
                    android:id="@+id/form_info_arrived"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已送达"/>

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:src="@color/btn"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/form_info_shop_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="form_shop_name"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ListView
                        android:id="@+id/form_info_list_food"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:listSelector="#00000000"></ListView>
                </LinearLayout>

                <TextView
                    android:id="@+id/form_info_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:padding="10dp"
                    android:text="￥price"
                    android:textColor="@color/red"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:src="@color/btn" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="配送信息"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/form_info_sendState"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="配送状态:" />


                <TextView
                    android:id="@+id/form_info_sender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="骑手:无" />


            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:src="@color/btn"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="订单详情"
                    android:textSize="20dp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/form_info_contact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="联系人"/>
                <TextView
                    android:id="@+id/form_info_telphone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="联系电话"/>
                <TextView
                    android:id="@+id/form_info_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="收货地址"/>
                <TextView
                    android:id="@+id/form_info_payMethod"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="支付方式"/>
                <TextView
                    android:id="@+id/form_info_submitTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="提交时间"/>
                <TextView
                    android:id="@+id/form_info_serviceTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="送达时间"/>
                <TextView
                    android:id="@+id/form_info_note"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="备注"/>
            </LinearLayout>


        </LinearLayout>


    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal" >
        <Button
            android:id="@+id/form_info_complain"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="投诉"
            android:background="@drawable/lv_btn_forms_item2"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/form_info_again"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="再来一单"
            android:background="@drawable/lv_btn_forms_item2"/>
        <Button
            android:id="@+id/form_info_pay"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/lv_btn_forms_item"
            android:visibility="gone"
            android:text="付款"   />
        <Button
            android:id="@+id/form_info_confirm"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:text="确认收货"
            android:background="@drawable/lv_btn_forms_item"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/form_info_goComment"
            android:visibility="gone"
            android:text="去评价"
            android:background="@drawable/lv_btn_forms_item"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/form_info_cancel"
            android:visibility="gone"
            android:text="取消订单"
            android:background="@drawable/lv_btn_forms_item"/>

    </LinearLayout>


</LinearLayout>
