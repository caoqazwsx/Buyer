<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zhao.buyer">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name=".activity.HomeActivity"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activity.ShopActivity" />
        <activity
            android:name=".activity.CartActivity"
            android:theme="@style/MyCartStyle" />
        <activity android:name=".activity.SubmitFormActivity" />
        <activity android:name=".activity.PayActivity" />
        <activity android:name=".activity.FormInfoActivity" />
        <activity android:name=".activity.SubmitCommentActivity" />
        <activity android:name=".activity.MyCommentActivity" />
        <activity android:name=".activity.MyCollectActivity" />
        <activity android:name=".activity.MyAddressActivity" />
        <activity android:name=".activity.EditAddressActivity" />
        <activity android:name=".activity.HelpActivity" />
        <activity android:name=".activity.LocationActivity" />
        <activity android:name=".activity.SubmitComplainActivity" />
        <activity android:name=".activity.BackFormReasonSubmitActivity" />
        <activity android:name=".activity.ChargeActivity" />


    </application>

</manifest>